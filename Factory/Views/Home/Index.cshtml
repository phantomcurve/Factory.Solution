@{
  Layout = "_Layout";
}

@using Factory.Models

<h1>Welcome to Dr. Sillystringz's Questionable Machine Repair Factory!</h1> 

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Sillystringz Engineers</h3>
      @if (@ViewBag.EmployeeDirectory.Count == 0)
      {
        <h4>No engineers here yet!</h4>
      }
      @foreach(Engineer engineer in @ViewBag.EmployeeDirectory)
      {
        <li>@engineer.Name</li>
      }
    </div>
    <div class="col-md-6">
      <h3>Machines undergoing service at Sillystringz</h3>
      @if (@ViewBag.MachineInventory.Count == 0)
      {
        <h4>No machines currently in for repair!</h4>
      }
      @foreach(Machine machine in @ViewBag.MachineInventory)
      {
        <li>@machine.Name</li>
      }
    </div>
  </div>
</div>

<p>@Html.ActionLink("See standalone list of engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("See standalone list of machines", "Index", "Machines")</p>
