@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new machine</h4>
@using (Html.BeginForm())
{
    @Html.Label("Name of new machine")
    @Html.TextBoxFor(model => model.Name, new { @class = "text", type = "text", required = "required" })
    <br>
    @Html.Label("Engineers")
    @Html.DropDownList("EngineerId", null, string.Empty)

    <input type="submit" value="Add new machine" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all machines", "Index")</p>